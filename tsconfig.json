{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "rootDirs": [
      "./src"
		],
    "jsx": "react",
    "alwaysStrict": true,
    "allowJs": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "lib": [
      "es7",
      "es6",
      "es2015.promise",
      "es2015.generator",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
	},
	"include": [
		"./src"
	],
	"exclude": [
		"node_modules",
		"./dist"
	]
}